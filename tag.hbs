{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div id="container" class="{{body_class}}" >
    <div class="slider">
        {{#if tag.image}}
        <div class="postItem tagPage">
            <div class="contentWrapper"  style="background-image: url({{tag.image}})">
        {{else}}
        <div class="postItem tagPage noCoverImage">
            <div class="contentWrapper">
        {{/if}}
                <div class="content">
                    <div class="reflow">
                        <div class="content">
                            <div class="excerpt">
                                <div class="titleTags">tag</div>
                                <h1>{{tag.name}}</h1>
                                <hr />
                                <h2>
                                {{#if tag.description}}
                                {{tag.description}}
                                {{else}}
                                A {{pagination.total}}-post collection
                                {{/if}}
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{! The tag below includes the post loop - partials/loop.hbs }}
        {{> "loop"}}
    </div>
</div>
<div class="ajaxedContainer">
    <a class="ajaxCloseLink closePostButton" href="/">
        <div class="wrapper">
            <div class="iconClose"><i class="fa fa-angle-left"></i></div>
            BACK
        </div>
    </a>
    <div class="ajaxContent">

    </div>
</div>
<div class="pagePaginationContainer">
    <div class="content">

    </div>
</div>
