{{!< default}}
{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
<div id="container" class="{{body_class}}" >
    <div class="slider">
        {{#if @blog.cover}}
        <div class="postItem welcome ">
            <div class="contentWrapper"  style="background-image: url({{@blog.cover}})">
        {{else}}
        <div class="postItem welcome noCoverImage">
            <div class="contentWrapper">
        {{/if}}
                <div class="content">
                    <div class="reflow">
                        <div class="content">
                            <div class="excerpt">
                                <div class="titleTags">welcome to</div>
                                <h1 class="postTitle">{{@blog.title}}</h1>
                                <hr />
                                <h2>{{@blog.description}}</h2>
                                <ul class="makeAuthorList">
                                    <li class="first"><span>By </span></li>
                                </ul>
                                <div class="social">
                                    <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i></a>
                                    <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a>
                                    <a href=""><i class="fa fa-youtube"></i></a>
                                    <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="fa fa-google-plus"></i></a>
                                    <a href="{{@blog.url}}/rss/"><i class="fa fa-rss"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{! The tag below includes the post loop - partials/loop.hbs }}
        {{> "loop"}}
    </div>
</div>
<div class="test ajaxedContainer">
        <a class="ajaxCloseLink closePostButton" href="/">
            <div class="wrapper">
                <div class="iconClose"><i class="fa fa-angle-left"></i></div>
                BACK
            </div>
        </a>
        <div class="ajaxContent">

        </div>
    </div>
<div class="pagePaginationContainer">
    <div class="content">

    </div>
</div>
